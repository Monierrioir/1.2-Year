#include <stdio.h>

int main() {
    char a;
    printf("Please enter a character: ");
    scanf("%c",&a);

    if(97<=a && a>=127){
        printf("This is a upper case letter.");
    }
    else if(65<=a && a>=90){
        printf("This is a lower case letter.");
    }
    else
        printf("This is a special character.");
    return 0;
}
